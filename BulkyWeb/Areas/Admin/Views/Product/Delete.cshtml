@model Product

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">Delete Product</div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="form-floating py-2 col-12">
                <input asp-for="Title" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Title" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <textarea asp-for="Description" type="text" class="form-control border-0 shadow" rows="5" disabled></textarea>
                <label asp-for="Description" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ISBN" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="ISBN" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Author" type="text" class="form-control border-0 shadow" disabled />
                <label asp-for="Author" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="ListPrice" type="number" class="form-control border-0 shadow" disabled />
                <label asp-for="ListPrice" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price" type="textnumber class="form-control border-0 shadow" disabled />
                <label asp-for="Price" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price50" type="number" class="form-control border-0 shadow" disabled />
                <label asp-for="Price50" class="ms-2"></label>
            </div>
            <div class="form-floating py-2 col-12">
                <input asp-for="Price100" type="number" class="form-control border-0 shadow" disabled />
                <label asp-for="Price100" class="ms-2"></label>
            </div>

            <div class="row mt-3">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">
                        Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

